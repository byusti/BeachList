<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="#FFFFFF">

            <Button
                android:id="@+id/btn_accept_friend_request"
                android:layout_width="59dp"
                android:layout_height="27dp"
                android:layout_marginStart="160dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/ic_baseline_check_24"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/friend_last_name" />

            <Button
                android:id="@+id/btn_reject_friend_request"
                android:layout_width="53dp"
                android:layout_height="34dp"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:background="@drawable/ic_baseline_clear_24"
                app:layout_constraintBottom_toBottomOf="@+id/btn_accept_friend_request"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.2"
                app:layout_constraintStart_toEndOf="@+id/btn_accept_friend_request"
                app:layout_constraintTop_toTopOf="@+id/btn_accept_friend_request"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/friend_first_name"
                android:layout_width="175dp"
                android:layout_height="23dp"
                android:layout_marginTop="12dp"
                android:text="@string/first_name"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.412"
                app:layout_constraintStart_toEndOf="@+id/ivProfileImage"
                app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />

            <TextView
                android:id="@+id/friend_last_name"
                android:layout_width="173dp"
                android:layout_height="23dp"
                android:layout_marginTop="12dp"
                android:text="@string/last_name"
                android:textColor="#000000"
                app:layout_constraintEnd_toEndOf="@+id/friend_first_name"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/friend_first_name"
                app:layout_constraintTop_toBottomOf="@+id/friend_first_name" />

            <ImageView
                android:id="@+id/ivProfileImage"
                android:layout_width="103dp"
                android:layout_height="96dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/person_icon" />

            <Button
                android:id="@+id/btn_account_picture_button"
                android:layout_width="103dp"
                android:layout_height="96dp"
                app:layout_constraintBottom_toBottomOf="@+id/ivProfileImage"
                app:layout_constraintEnd_toEndOf="@+id/ivProfileImage"
                app:layout_constraintStart_toStartOf="@+id/ivProfileImage"
                android:background="?attr/selectableItemBackground"
                app:layout_constraintTop_toTopOf="@+id/ivProfileImage" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>