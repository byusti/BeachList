<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ServiceHomeSearchTab" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/service_tab_recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/service_search_bar"
        android:layout_width="325dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_menu_toolbar"
        app:layout_constraintStart_toStartOf="@+id/home_menu_toolbar"
        app:layout_constraintTop_toTopOf="@+id/home_menu_toolbar">

    </EditText>
</androidx.constraintlayout.widget.ConstraintLayout>