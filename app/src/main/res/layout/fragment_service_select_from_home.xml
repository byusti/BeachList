<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF3D00"
    tools:context=".ServiceHomeSearch">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/home_menu_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/listing_type_tab_menu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_menu_toolbar"
        tools:layout_editor_absoluteY="120dp" />

    <SearchView
        android:id="@+id/sv_Search_bar"
        android:layout_width="325dp"
        android:layout_height="35dp"
        app:layout_constraintBottom_toBottomOf="@+id/home_menu_toolbar"
        app:layout_constraintStart_toStartOf="@+id/home_menu_toolbar"
        app:layout_constraintTop_toTopOf="@+id/home_menu_toolbar">

    </SearchView>

    <Button
        android:id="@+id/btn_categories"
        android:layout_width="41dp"
        android:layout_height="38dp"
        android:background="@drawable/ic_baseline_category_24"
        app:layout_constraintBottom_toBottomOf="@+id/home_menu_toolbar"
        app:layout_constraintEnd_toEndOf="@+id/home_menu_toolbar"
        app:layout_constraintHorizontal_bias="0.377"
        app:layout_constraintStart_toEndOf="@+id/sv_Search_bar"
        app:layout_constraintTop_toTopOf="@+id/home_menu_toolbar"
        app:layout_constraintVertical_bias="0.555" />

</androidx.constraintlayout.widget.ConstraintLayout>